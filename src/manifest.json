{
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"version": "0.6.0",

	"default_locale": "en",

	"description": "__MSG_extension_description__",
	"author": "__MSG_extension_author__",
	"homepage_url": "https://github.com/denschub/firefox-tabgroups",

	"icons": {
		"32": "content/icons/extension-32.png",
		"64": "content/icons/extension-64.png"
	},

	"permissions": [
		"activeTab"
	],

	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Alt+G"
			}
		},
		"switch_group": {
			"suggested_key": {
				"default": "Ctrl+Comma"
			}
		}
	},

	"background": {
		"scripts": ["index.js"]
	},

	"browser_action": {
		"default_icon": "content/icons/button.svg",
		"default_title": "__MSG_browser_action_title__",
		"default_popup": "data/groupspanel.html"
	}
}
