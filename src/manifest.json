{
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"version": "0.6.0",

	"default_locale": "en",

	"description": "__MSG_extension_description__",
	"author": "__MSG_extension_author__",
	"homepage_url": "https://github.com/denschub/firefox-tabgroups",

	"icons": {
